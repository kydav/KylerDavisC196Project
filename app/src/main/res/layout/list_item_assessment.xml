<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/assessment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="Test" />
    <TextView
        android:id="@+id/assessment_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/assessment_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Assessment Type:"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/assessment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/assessment_name"
        android:layout_toRightOf="@id/assessment_type_text"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="Performance"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/assessment_due_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/assessment_name"
        android:layout_toRightOf="@id/assessment_type"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Due:"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/assessment_due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/assessment_name"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/assessment_due_text"
        android:text="10/10/2010"
        android:textSize="14sp" />
</RelativeLayout>
