<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        tools:text="Test" />
    <TextView
        android:id="@+id/course_start_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="Start:"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/course_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_name"
        android:layout_toRightOf="@id/course_start_text"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="10/10/2010"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/course_end_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_name"
        android:layout_toRightOf="@id/course_start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="End:"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/course_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_name"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/course_end_text"
        android:text="10/10/2010"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/course_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_start"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="5dp"
        android:text="Status:"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/course_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_start"
        android:layout_toRightOf="@id/course_status_text"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:text="In progress"
        android:textSize="14sp" />


</RelativeLayout>
